<Window x:Class="GameServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameServer"
        mc:Ignorable="d"
        Title="GameServer" Height="288.5" Width="445.5" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="RunServerButton" Content="Run server" HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Width="102" Click="RunServerButton_Click" FontSize="21" Height="31" FontFamily="Times New Roman"/>
        <Border BorderBrush="Black" BorderThickness="6"
                    Margin="10,54,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <TextBlock
                    x:Name="ConsoleTextBlock"
                    Height="183" 
                    Width="407"
                    Text="{Binding input_property}"
                    TextWrapping="Wrap" Background="Black" Foreground="White" />
        </Border>
        <Label x:Name="IpAddressLabel" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" FontFamily="Consolas" Height="31"/>

    </Grid>
</Window>
